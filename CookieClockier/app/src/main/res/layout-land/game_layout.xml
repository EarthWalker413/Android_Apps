<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cookyImage"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cook_amount_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/textSelectHandle" />

    <TextView
        android:id="@+id/cook_amount_view"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stateAssetImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:background="#868686"
        app:layout_constraintStart_toEndOf="@+id/randomAssetImage"
        app:layout_constraintTop_toBottomOf="@+id/purchaseUpgradeButton" />

    <ImageView
        android:id="@+id/randomAssetImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="#868686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseUpgradeButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:text="@string/newrandomAsset"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomAssetImage" />

    <ImageView
        android:id="@+id/bonusImageView"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:text="stateAsset"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/stateAssetImage" />

    <Button
        android:id="@+id/purchaseUpgradeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CLICK HERE TO BUY UPGRADE (20 COOKIES)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cook_amount_view" />


</androidx.constraintlayout.widget.ConstraintLayout>